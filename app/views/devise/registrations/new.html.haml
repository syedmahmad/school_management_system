= javascript_include_tag "page_specific/phone_validation"
- @sigin_page = true
.container
  .row
    .col-md-12
      .wrap
        %p.form-title
          Sign In
        %form.login{url: user_registration_path, method: 'post'}
          %input{name: 'user[name]', :placeholder => "Name", :type => "text", required: true}/
          %input{name: 'user[email]', :placeholder => "Email", :type => "email", required: true}/
          %input#phone{:type => "tel", name: 'user[mobile_number]', class: 'form-control', placeholder: "321-44xxx46"}
          %input{name: 'user[password]', :placeholder => "Password", :type => "password", required: true}/
          %input.btn.btn-success.btn-sm{:type => "submit", :value => "Sign Up", id: 'check_phone'}/
          