- @sigin_page = true
.container
  .row
    .col-md-12
      .wrap
        %p.form-title
          Sign In
        %form.login{url: user_session_path, method: 'post'}
          %input{name: 'user[mobile_number]', :type => "text", pattern: '((\+92)|(0))-{0,1}(3)\d{2}-(?!1234567)(?!1111111)(?!7654321)[0-9]{7}', required: true, oninvalid: "setCustomValidity('Please enter valid number with formate 0321-44xxxx6 or +92321-99xxx99')", onchange: "try{setCustomValidity('')}catch(e){}", placeholder: "0321-445xxx6"}/
          %input{name: 'user[password]', :placeholder => "Password", :type => "password", required: true}/
          %input.btn.btn-success.btn-sm{:type => "submit", :value => "Sign In"}/
          = link_to "Register Now", new_user_registration_path, class: 'btn btn-primary hvr-sweep-to-left'
        